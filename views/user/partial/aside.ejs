




<aside class="sidebar">
    <div class="profile">
      <div class="profile-pic">
        <span class="initial"><%= user.email.charAt(0).toUpperCase() %></span>
      </div>
      <div class="profile-info">
        <p class="name"><%= user.userName %></p>
        <p class="bonuses"><span class="material-icons"><%= user.email %></span></p>
      </div>
    </div>

    <nav class="sidebar-nav">
      <ul>
        <li class="<%= activePage === 'order' ? 'active' : '' %>"><a href="/account-orders"><span class="material-icons"></span> Orders</a></li>
        <li class="<%= activePage === 'Wallet' ? 'active' : '' %>"><a href="/account-wallet"><span class="material-icons"></span> Wallet</a></li>
      </ul>
    </nav>

    <section class="manage-account">
      <h3>Manage account</h3>
      <ul>
        <li class="<%= activePage === 'Personal-info' ? 'active' : '' %>"><a href="/account-personal-info"><span class="material-icons"></span> Personal info</a></li>
        <li class="<%= activePage === 'address' ? 'active' : '' %>"><a href="/account-address"><span class="material-icons"></span> Addresses</a></li>
      </ul>
    </section>

    <section class="customer-service">
      <h3>Customer service</h3>
      <ul>
        <li class="<%= activePage === 'terms' ? 'active' : '' %>"><a href="/terms-and-contion"><span class="material-icons"></span> Terms and conditions</a></li>
      </ul>
    </section>

    <div class="logout">
      <form action="/logout" method="post" id="logoutForm">
        <a type="submit" onclick="logout()" href="">Log out</a>
      </form>
    </div>
</aside>
  
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
  function logout()  {
    Swal.fire({
      title: 'LogOut!',
      text: 'Are you sure to logout.',
      icon: 'success',
      confirmButtonText: 'OK'
    });
  }
</script>