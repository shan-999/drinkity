<script>
$(document).ready(function () {
	$(".wrap-pic-w").each(function () {
		var $this = $(this);
		var $img = $this.find("img");

		var magnifier = $('<div class="img-magnifier"></div>').appendTo($this);

		$this.on("mouseenter", function () {
			magnifier.show();
		});

		$this.on("mouseleave", function () {
			magnifier.hide();
		});

		$this.on("mousemove", function (e) {
			var x = e.pageX - $this.offset().left;
			var y = e.pageY - $this.offset().top;

			magnifier.css({
				left: x - (magnifier.width() / 2) + "px", 
				top: y - (magnifier.height() / 2) + "px",
				backgroundImage: "url(" + $img.attr("src") + ")", 
				backgroundRepeat: "no-repeat",
				backgroundSize: ($img.width() * 2) + "px " + ($img.height() * 2) + "px", 
				backgroundPosition: "-" + (x * 2 - magnifier.width() / 2) + "px -" + (y * 2 - magnifier.height() / 2) + "px" 
			});
		});
	});
});
</script>

