<script>
	const quantityInput = document.getElementById('quantity');
	const decreaseBtn = document.querySelector('.decrease');
	const increaseBtn = document.querySelector('.increase');
	const productQuanity = document.getElementById('product-quantity').value
	const maxQuantity = productQuanity;
	
	function updateQuantity(newValue) {
		let value = parseInt(newValue);

		if (isNaN(value)) value = 1;

		value = Math.max(1, Math.min(maxQuantity, value));
		quantityInput.value = value;
		
		decreaseBtn.disabled = value <= 1;
		increaseBtn.disabled = value >= maxQuantity
		increaseBtn.disabled = value >= 10
	}
	
	decreaseBtn.addEventListener('click', () => {
		updateQuantity(parseInt(quantityInput.value) - 1);
	});
	
	increaseBtn.addEventListener('click', () => {
		updateQuantity(parseInt(quantityInput.value) + 1);
	});
	

	updateQuantity(quantityInput.value);

</script>


	
		
	

	
	
