    <script>
        function toggleDropdown(header) {
            const parent = header.parentElement;
            const list = parent.querySelector('.subcategory-list');
            list.classList.toggle('hidden');
            const toggleArrow = header.querySelector('.toggle');
            toggleArrow.textContent = list.classList.contains('hidden') ? '▼' : '▲';
        }




         document.getElementById('filter-btn').addEventListener('click',() => {
            const selectedValues = {};
            const radioGroups = document.querySelectorAll(".subcategory-list");

            radioGroups.forEach((group) => {
                const radios = group.querySelectorAll("input[type='radio']");
                const groupName = radios[0]?.name; 

                const selectedRadio = [...radios].find(radio => radio.checked);

                if (selectedRadio) {
                    selectedValues[groupName] = selectedRadio.parentElement.textContent.trim();
                }
            });


            if(Object.keys(selectedValues).length <= 0){
                
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Pleas select a filter!',
                    confirmButtonText: 'OK'
                });

            }
            const category = document.getElementById('category-name').value
            
            
            

            axios.post('/filter-category',{selectedValues,category})
            .then(response => {
                
                if(response.data.success){
                    const products = response.data.products
                    const productGrid = document.querySelector('.product-grid')
   
                    

                    productGrid.innerHTML = '';

                    products.forEach(product => {
                        productGrid.innerHTML += `
                            <div class="col">
                                <div class="product-item" style="width: 230px;">
                                    ${product.discount ? `<span class="badge bg-success position-absolute m-3">-30%</span>` : ''}
                                    <a data-productId="${product._id}" class="btn-wishlist">
                                        <svg width="24" height="24"><use xlink:href="#heart"></use></svg>
                                    </a>
                                    <figure>
                                        <a href="/product-details/${product._id}" title="${product.productName}">
                                            <img src="${product.images[0]}" 
                                                alt="${product.productName}" 
                                                class="tab-image ${product.quantity <= 0 ? 'out-of-stock' : ''}" 
                                                width="186px">
                                        </a>
                                    </figure>
                                    <h3>${product.productName}</h3>
                                    <span class="rating">
                                        <svg width="24" height="24" class="text-primary"><use xlink:href="#star-solid"></use></svg>
                                        ${(Math.random() * 4 + 1).toFixed(1)}
                                    </span>
                                    <span class="price">₹${product.price.toFixed(2)}</span>
                                </div>
                            </div>`;
                    });
                    
                }
            })
            .catch(error => {
                console.log(`error in filter category : ${error}`);
            })

            
         })
    </script>

    
