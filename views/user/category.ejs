.custom-button {
    background-color: #3e3535;
    color: white;
    padding: 0px 50px;
    font-size: 14px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.custom-button:hover {
    background-color: #272222;
    color: red;
}

