<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Products</title>
  <link rel="stylesheet" href="/style/admin/sidebar.css">
  <link rel="stylesheet" href="/style/admin/header.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

  <style>
    .product-table {
      width: 100%;
      border-collapse: collapse;
    }
    .product-table th, .product-table td {
      padding: 10px;
      border: 1px solid #ccc;
      text-align: center;
    }
    .product-table th {
      background-color: #f7f7f7;
      font-weight: bold;
    }
    .product-images {
      display: flex;
      gap: 5px;
      justify-content: center;
    }
    .product-images img {
      width: 50px;
      height: 50px;
      object-fit: cover;
      border-radius: 5px;
    }
    .product-actions button {
      background: none;
      border: none;
      cursor: pointer;
    }
    .product-actions .edit-btn {
      color: #4CAF50;
    }
    .product-actions .delete-btn {
      color: #F44336;
    }
    .add-btn {
      display: inline-block;
      margin-bottom: 20px;
      padding: 10px 20px;
      background-color: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
      border-radius: 5px;
    }
    .no-products {
      text-align: center;
      font-size: 18px;
      color: #777;
      margin-top: 20px;
    }


    .modal {
  display: none;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  justify-content: center;
  align-items: center;
}


.blur {
  filter: blur(5px); 
  pointer-events: none; 
  user-select: none; 
}


.modal-content {
  background-color: white;
  padding: 20px;
  border-radius: 5px;
  width: 300px;
  text-align: center;
}
.modal-actions button {
  margin: 10px;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}
.cancel-btn {
  background-color: #ccc;
}
.confirm-btn {
  background-color: #F44336;
  color: white;
}

.pagination {
    margin-top: 20px;
    display: flex;
    justify-content: center;
    gap: 10px;
}


/* pagination */
.pagination a {
    padding: 8px 12px;
    border: 1px solid #ddd;
    color: #333;
    text-decoration: none;
    border-radius: 4px;
}

.pagination .active-page {
    background-color: #007bff;
    color: white;
    border: none;
}

.pagination a:hover {
    background-color: #007bff;
    color: white;
}



  </style>
</head>
<body>
  <div class="admin-layout">
    <%- include('partial/sidebar') %> 

    <div class="main-content">
      <%- include('partial/header') %> 

      <div class="page-content">
        <h1>Products</h1>

        <button class="add-btn" onclick="window.location.href='/admin/add-product'">Add Product</button>

        <% if (product.length > 0) { %>
          <table class="product-table">
            <thead>
              <tr>
                <th>Images</th>
                <th>Product Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Brand</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% product.forEach(product => { %>
                <tr>
                  <td>
                    <div class="product-images">
                      <% product.images.slice(0, 3).forEach(image => { %>
                        <img src="<%= image %>" alt="<%= product.productName %>">
                      <% }) %>
                    </div>
                  </td>
                  <td><%= product.productName %></td>
                  <td><%= product.category %></td>
                  <td><%= product.quantity %></td>
                  <td>â‚¹<%= product.price %></td>
                  <td><%= product.brand %></td>
                  <td class="product-actions">
                    <button class="edit-btn" onclick="window.location.href='/admin/edit-product/<%= product._id %>'">
                      <i class="fa fa-edit"></i>
                    </button>
                    <button class="delete-btn" onclick="openDeleteModal('<%= product._id %>')">
                      <i class="fa fa-trash"></i>
                    </button>
                    <% if (product.listed) { %>
                      <button class="unblock-btn" onclick="changeStatus('<%= product._id %>', 'unlist')"><u>Unlist</u></button>
                    <% } else { %>
                      <button class="block-btn" onclick="changeStatus('<%= product._id %>', 'list')"><u>List</u></button>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>

           <!-- Pagination Controls -->
          <div class="pagination">
            <% if (page > 1) { %>
                <a href="?page=<%= page - 1 %>" class="prev-page">Previous</a>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
                <a href="?page=<%= i %>" class="<%= page === i ? 'active-page' : '' %>"><%= i %></a>
            <% } %>

            <% if (page < totalPages) { %>
                <a href="?page=<%= page + 1 %>" class="next-page">Next</a>
            <% } %>
          </div>



        <% } else { %>
          <p class="no-products">No products are listed.</p>
        <% } %>
      </div> 
    </div>
  </div>

  <div id="deleteModal" class="modal">
    <div class="modal-content">
      <h2>Confirm Deletion</h2>
      <p>Are you sure you want to delete this product?</p>
      <div class="modal-actions">
        <button class="cancel-btn" onclick="closeDeleteModal()">Cancel</button>
        <button class="confirm-btn" id="confirmDelete">Confirm</button>
      </div>
    </div>
  </div>

  <script>
    let currentProductId = '';

    function openDeleteModal(productId) {
      currentProductId = productId;
      document.getElementById('deleteModal').style.display = 'flex';
      document.querySelector('.main-content').classList.add('blur');  // Add blur effect
    }

    function closeDeleteModal() {
      document.getElementById('deleteModal').style.display = 'none';
      document.querySelector('.main-content').classList.remove('blur');  // Remove blur effect
    }

    // Handle the confirm delete action
    document.getElementById('confirmDelete').addEventListener('click', function() {
      fetch(`/admin/delete-product/${currentProductId}`, {
        method: 'DELETE'
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          window.location.reload();
        } else {
          alert('Error deleting product.');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error deleting product.');
      });

      closeDeleteModal();
    });


    //change status
    function changeStatus(prodectId, action) {
      fetch(`/admin/product-status/${action}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ prodectId })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          location.reload(); 
        } else {
          alert('Failed to update product status');
        }
      })
      .catch(err => console.error('Error:', err));
    }

  </script>
  <script src="/script/admin/header.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
